CREATE DATABASE my_database;
USE my_database;
CREATE TABLE users (
    user_id INT PRIMARY KEY AUTO_INCREMENT,
    username VARCHAR(50),
    email VARCHAR(100)
);
CREATE TABLE posts (
    post_id INT PRIMARY KEY AUTO_INCREMENT,
    user_id INT,
    text_content TEXT,
    FOREIGN KEY (user_id) REFERENCES users(user_id)
);
INSERT INTO users (username, email) VALUES 
('chuck', 'chuck@example.com'),
('alice', 'alice@example.com'),
('bob', 'bob@example.com');
INSERT INTO posts (user_id, text_content) VALUES 
(1, 'Hello, this is Chuck\'s first post!'),
(2, 'Alice\'s post content here.'),
(1, 'Chuck\'s second post.');
SELECT * FROM users;
SELECT * FROM posts;
SELECT username, email FROM users;
SELECT username AS Nutzername, email AS "Email-Adresse" FROM users;
SELECT * FROM users WHERE username = 'chuck';
SELECT username FROM users ORDER BY username ASC;
SELECT username FROM users ORDER BY user_id DESC;
SELECT * FROM users LIMIT 2;
SELECT users.username, posts.text_content FROM users 
JOIN posts ON users.user_id = posts.user_id;
